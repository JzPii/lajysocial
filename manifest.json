{
  "manifest_version": 3,
  "name": "LajySocial",
  "version": "1.0",
  "description": "Auto-surf social media with positive engagement",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.facebook.com/*",
    "https://www.instagram.com/*",
    "https://www.linkedin.com/*",
    "https://www.reddit.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.facebook.com/*",
        "https://www.instagram.com/*",
        "https://www.linkedin.com/*",
        "https://www.reddit.com/*"
      ],
      "js": [
        "surfers/base-surfer.js",
        "surfers/facebook-surfer.js",
        "surfers/linkedin-surfer.js",
        "surfers/twitter-surfer.js",
        "surfers/instagram-surfer.js",
        "surfers/reddit-surfer.js",
        "surfers/surfer-factory.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LajySocial",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
{
  "manifest_version": 3,
  "name": "LajySocial",
  "version": "1.0",
  "description": "Auto-surf social media with positive engagement",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.facebook.com/*",
    "https://www.instagram.com/*",
    "https://www.linkedin.com/*",
    "https://www.reddit.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.facebook.com/*",
        "https://www.instagram.com/*",
        "https://www.linkedin.com/*",
        "https://www.reddit.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LajySocial"
  },
  "background": {
    "service_worker": "background.js"
  }
}